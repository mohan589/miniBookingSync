<div class="row">
	{{#each bookings as |booking|}}
		<div class="col-lg-4">
			<div class="panel panel-default panel-success">
				<div class="panel-heading">
					<h4 class="panel-title">
						{{booking.client_email}}
					</h4>
				</div>
				<div class="panel-body">
					<p>
							Check-In: <b>{{booking.start_at}}</b>
					</p>
					<p>
							Check-Out: <b>{{booking.end_at}}</b>
					</p>
					</div>
				<div class="panel-footer"  style="overflow: hidden;">
					<span>
						Price: {{booking.price}}
					</span>
					<span class="pull-right">
						{{#link-to "bookings.edit" booking.rental.id booking.id  class='btn btn-primary btn-xs'}} Edit {{/link-to}}
						<button class="btn btn-danger btn-xs" {{action 'deleteRental' rental}}>Delete</button>
					</span>
				</div>
			</div>
		</div>
	{{/each}}
</div>
