<div class="row">
	{{#each bookings as |booking|}}
		<div class="col-lg-4">
			<div class="panel panel-default panel-success">
				<div class="panel-heading">
					<h4 class="panel-title">
						{{booking.client_email}}
					</h4>
				</div>
				<div class="panel-body">{{booking.start_at}}</div>
				<div class="panel-body">{{booking.end_at}}</div>
				<div class="panel-footer"  style="overflow: hidden;">
					<span>
						{{booking.price}}
					</span>
					<span class="pull-right">
						{{#link-to "rentals.edit"  rental.id  class='btn btn-primary btn-xs'}} Edit {{/link-to}}
						<button class="btn btn-danger btn-xs" {{action 'deleteRental' rental}}>Delete</button>
					</span>
				</div>
			</div>
		</div>
	{{/each}}
</div>
