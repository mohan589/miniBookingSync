<div class="form-horizontal">
		<div class="form-group has-feedback {{if booking.isValid 'has-success'}}">
	        <label class="col-sm-2 control-label">Rental Type*</label>
	        <div class="col-sm-10">
	        <select class="form-control" id="entityType" onchange={{action 'onSelectEntityType' value="target.value"}}>
	        	<option></option>
			  {{#each rentals as |rental|}}
			    <option value={{rental.id}} >{{rental.name}}</option>
			  {{/each}}
			</select>
	          {{#if booking.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
	        </div>
	    </div>
    <div class="form-group has-feedback {{if booking.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Starting Date*</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker value=booking.start_at class="form-control"}}
          {{#if booking.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Ending Date</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker value=booking.end_at class="form-control"}}
        </div>
    </div>    
    <div class="form-group">
        <label class="col-sm-2 control-label">Client Email</label>
        <div class="col-sm-10">          
          {{input type="text" value=booking.client_email class="form-control" placeholder="Client Email Address"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Price</label>
        <div class="col-sm-10">
          {{input type="text" value=booking.price class="form-control" placeholder="Will be updated based on Rental Type"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{#if isNew}}
			    <button type="submit" class="btn btn-default"   {{action 'save'}}> Save</button>
            {{else}}
                <button type="submit" class="btn btn-default"   {{action 'edit'}}> Update</button>
            {{/if}}
        </div>
    </div>
</div>