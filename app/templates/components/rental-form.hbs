<div class="form-horizontal">
    <div class="form-group has-feedback {{if rental.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Name*</label>
        <div class="col-sm-10">
          {{input type="text" value=rental.name class="form-control" placeholder="rental Name"}}
          {{#if rental.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Daily Rate</label>
        <div class="col-sm-10">
          {{input type="text" value=rental.daily_rate class="form-control" placeholder="The address of the Library"}}
        </div>
    </div>   
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{#if isNew}}
			    <button type="submit" class="btn btn-default"   {{action 'save'}}> Save</button>
            {{else}}
                <button type="submit" class="btn btn-default"   {{action 'edit'}}> Update</button>
            {{/if}}
        </div>
    </div>
</div>